extends ../../layouts/defaultLogin.pug

block Content
    form.w-50.mx-auto(action="/auth/login" method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(type="text" name="email" value= email?email:'')
        .form-group
            label(for="password") Password
            input#password.form-control(type="password" name="password" value= password?password:'')
        if errors
            each error in errors
                .alert.alert-danger= error
        button.btn.btn-primary Đăng nhập