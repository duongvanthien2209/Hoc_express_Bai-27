extends ../../layouts/defaultLogin.pug

block Content
    form.w-50.mx-auto(action="/auth/create" method="POST" enctype="multipart/form-data")
        .form-group
            label(for="name") Họ tên
            input#name.form-control(type="text" name="name" value= name?name:'')
        .form-group
            label(for="email") Email
            input#email.form-control(type="text" name="email" value= email?email:'')
        .form-group
            label(for="password") Password
            input#password.form-control(type="password" name="password" value= password?password:'')
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(type="file" name="avatar")
        if errors
            each error in errors
                .alert.alert-danger= error
        button.btn.btn-primary Đăng ký