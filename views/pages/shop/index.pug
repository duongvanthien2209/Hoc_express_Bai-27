extends ../../layouts/default

block Content
    a.btn.btn-primary(href="/books/addBook") Thêm sách
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Tên sách
                th(scope='col') Ảnh
                th(scope='col') Mô tả
                th(scope='col') Xóa
        tbody
            - var dem = 0
            each book in books
                tr
                    td= ++dem
                    td= book.name
                    td
                        img.rounded-circle(src= book.image alt="" height="50px" width="50px")
                    td= book.description
                    td
                        a.btn.btn-danger(href="#") Delete
