extends ../../layouts/defaultLogin.pug

block Content
    form.w-50.mx-auto(action="/books/addBook" method="POST")
        .form-group
            label(for="name") Tên sách
            input#name.form-control(type="text" name="name" value= name?name:'')
        .form-group
            label(for="description") Thông tin ngắn
            input#description.form-control(type="text" name="description" value= description?description:'')
        if errors
            each error in errors
                .alert.alert-danger= error
        button.btn.btn-primary Đăng ký